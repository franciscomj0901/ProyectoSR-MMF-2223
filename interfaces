# This file describes the network interfaces available on your system
# and how to activate them. For more information, see interfaces(5).

source /etc/network/interfaces.d/*

# The loopback network interface
auto lo
iface lo inet loopback

# The primary network interface
allow-hotplug enp0s3
auto enp0s3
iface enp0s3 inet static
	address 172.17.33.10
	netmask 255.255.255.0
#RUTA PREDETERMINADA AL ROUTER 2
	gateway 172.17.33.11
#RUTA ESTÁTICA AL CLIENTE 1
	up ip r add 172.17.31.10/24 via 172.17.33.11 dev enp0s3
	down ip r del 172.17.31.10/24 via 172.17.33.11 dev enp0s3
#RUTA ESTÁTICA AL CLIENTE 2
	up ip r add 172.17.32.10/24 via 172.17.33.11 dev enp0s3
	down ip r del 172.17.32.10/24 via 172.17.33.11 dev enp0s3


